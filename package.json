    "@types/inflection": "1.5.28",
    "@types/jasmine": "2.8.7",
    "@types/jasminewd2": "2.0.3",
    "@types/node": "10.0.4",
    "@types/rimraf": "2.0.2",
    "@types/stringify-object": "3.2.0",
    "codelyzer": "4.3.0",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.1.0",
    "emoji-datasource": "4.0.4",
    "emojilib": "2.2.12",
    "fs-extra": "6.0.0",
    "inflection": "1.12.0",
    "jasmine-core": "2.99.1",
    "karma": "2.0.2",
    "karma-chrome-launcher": "2.2.0",
    "karma-coverage-istanbul-reporter": "1.4.2",
    "karma-jasmine": "1.1.2",
    "karma-jasmine-html-reporter": "0.2.2",
    "karma-mocha-reporter": "2.2.5",
    "ng-packagr": "3.0.0-rc.3",
    "rimraf": "2.6.2",
    "semantic-release": "15.3.1",
    "travis-deploy-once": "5.0.0",
    "stringify-object": "3.2.2",
    "ts-node": "6.0.2",
    "tslint": "5.10.0",
    "typescript": "2.7.2",
    "@angular-devkit/build-angular": "0.6.0"
  },
  "release": {
    "branch": "master"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "bundlesize": [
    {
      "path": "./dist/packages-dist/bundles/ctrl-ngx-emoji-mart.umd.min.js",
      "maxSize": "10 kB"
    },
    {
      "path": "./dist/packages-dist/ngx-emoji/bundles/ctrl-ngx-emoji-mart-ngx-emoji.umd.min.js",
      "maxSize": "60 kB"
